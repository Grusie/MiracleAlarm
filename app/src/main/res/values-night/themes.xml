<resources>
    <!-- Base application theme. -->
    <style name="Theme.MiracleAlarm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/dark_gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="MainBackground" parent="Theme.MiracleAlarm">
        <item name="android:background">?attr/colorPrimaryDark</item>
    </style>

    <style name="LightBackground" parent="Theme.MiracleAlarm">
        <item name="android:backgroundTint">?android:attr/colorBackground</item>
    </style>

    <style name="LowLightBackground" parent="Theme.MiracleAlarm">
        <item name="android:background">@color/light_black</item>
    </style>

    <style name="customTextButtonStyle" parent="Widget.AppCompat.TextView">
        <item name="android:backgroundTint">?android:attr/colorBackground</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingVertical">@dimen/padding_default</item>
        <item name="android:textAlignment">center</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
    </style>

    <style name="customPlayTextButtonStyle" parent="customTextButtonStyle">
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="android:background">?attr/colorOnSecondary</item>
        <item name="android:paddingVertical">0dp</item>
    </style>

    <style name="customImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/colorPrimaryDark</item>
        <item name="android:tint">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_half</item>
    </style>

    <style name="customLightImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">?android:attr/colorBackground</item>
        <item name="android:tint">@color/white</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/padding_half</item>
    </style>

    <style name="customButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
    </style>

</resources>