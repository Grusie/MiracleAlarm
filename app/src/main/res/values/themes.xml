<resources>
    <!-- Base application theme. -->
    <style name="Theme.MiracleAlarm" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_gray</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/custom_font</item>
    </style>

    <style name="customButtonStyle" parent="Widget.AppCompat.Button">
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="turnOffButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/turn_off_button_selector</item>
        <item name="android:textColor">@drawable/turn_off_button_text_selector</item>
    </style>
</resources>